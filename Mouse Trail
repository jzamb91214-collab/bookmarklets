javascript:(function() { if (window.mouseTrailActive) { alert('Mouse trail is already active!'); return; } window.mouseTrailActive = true; const settings = { trailLength: 20, particleSize: 8, particleColor: '#ff6b6b', fadeSpeed: 0.95, particleShape: 'circle', blurAmount: 0 }; const panel = document.createElement('div'); panel.id = 'mouseTrailSettings'; panel.innerHTML = ` <style> #mouseTrailSettings { position: fixed; top: 20px; right: 20px; background: rgba(0, 0, 0, 0.9); color: white; padding: 20px; border-radius: 10px; font-family: Arial, sans-serif; z-index: 999999; box-shadow: 0 4px 20px rgba(0,0,0,0.5); min-width: 250px; } #mouseTrailSettings h3 { margin: 0 0 15px 0; font-size: 18px; border-bottom: 2px solid #ff6b6b; padding-bottom: 10px; } #mouseTrailSettings label { display: block; margin: 10px 0 5px 0; font-size: 13px; font-weight: bold; } #mouseTrailSettings input[type="range"], #mouseTrailSettings input[type="color"], #mouseTrailSettings select { width: 100%; margin-bottom: 10px; } #mouseTrailSettings input[type="range"] { cursor: pointer; } #mouseTrailSettings .value-display { display: inline-block; margin-left: 10px; color: #ff6b6b; font-weight: bold; } #mouseTrailSettings button { width: 100%; padding: 10px; margin-top: 10px; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; font-size: 14px; } #mouseTrailSettings .close-btn { background: #ff4757; color: white; } #mouseTrailSettings .close-btn:hover { background: #ff3838; } #mouseTrailSettings .toggle-btn { background: #5352ed; color: white; } #mouseTrailSettings .toggle-btn:hover { background: #3742fa; } .mouse-trail-particle { position: fixed; pointer-events: none; z-index: 999998; } </style> <h3>ðŸŽ¨ Mouse Trail Settings</h3> <label>Trail Length: <span class="value-display" id="trailLengthValue">${settings.trailLength}</span></label> <input type="range" id="trailLength" min="5" max="50" value="${settings.trailLength}"> <label>Particle Size: <span class="value-display" id="particleSizeValue">${settings.particleSize}px</span></label> <input type="range" id="particleSize" min="3" max="30" value="${settings.particleSize}"> <label>Particle Color:</label> <input type="color" id="particleColor" value="${settings.particleColor}"> <label>Fade Speed: <span class="value-display" id="fadeSpeedValue">${settings.fadeSpeed}</span></label> <input type="range" id="fadeSpeed" min="0.8" max="0.99" step="0.01" value="${settings.fadeSpeed}"> <label>Particle Shape:</label> <select id="particleShape"> <option value="circle">Circle</option> <option value="square">Square</option> <option value="star">Star</option> <option value="heart">Heart</option> </select> <label>Blur Amount: <span class="value-display" id="blurAmountValue">${settings.blurAmount}px</span></label> <input type="range" id="blurAmount" min="0" max="10" value="${settings.blurAmount}"> <button class="toggle-btn" id="toggleTrail">Pause Trail</button> <button class="close-btn" id="closeTrail">Remove Trail</button> `; document.body.appendChild(panel); const particles = []; let trailEnabled = true; function updateSetting(id, property, displayId, suffix = '') { const element = document.getElementById(id); const display = document.getElementById(displayId); element.addEventListener('input', (e) => { settings[property] = property === 'particleShape' ? e.target.value : parseFloat(e.target.value); if (display) display.textContent = e.target.value + suffix; }); } updateSetting('trailLength', 'trailLength', 'trailLengthValue'); updateSetting('particleSize', 'particleSize', 'particleSizeValue', 'px'); updateSetting('particleColor', 'particleColor'); updateSetting('fadeSpeed', 'fadeSpeed', 'fadeSpeedValue'); updateSetting('particleShape', 'particleShape'); updateSetting('blurAmount', 'blurAmount', 'blurAmountValue', 'px'); function createParticle(x, y) { const particle = document.createElement('div'); particle.className = 'mouse-trail-particle'; particle.style.left = x + 'px'; particle.style.top = y + 'px'; particle.style.width = settings.particleSize + 'px'; particle.style.height = settings.particleSize + 'px'; particle.style.background = settings.particleColor; particle.style.filter = `blur(${settings.blurAmount}px)`; switch(settings.particleShape) { case 'circle': particle.style.borderRadius = '50%'; break; case 'square': particle.style.borderRadius = '0'; break; case 'star': particle.style.clipPath = 'polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%)'; break; case 'heart': particle.style.borderRadius = '50% 50% 0 0'; particle.style.transform = 'rotate(-45deg)'; const before = document.createElement('div'); before.style.cssText = `position: absolute; width: 100%; height: 100%; background: ${settings.particleColor}; border-radius: 50%; top: 0; left: 50%;`; particle.appendChild(before); break; } document.body.appendChild(particle); particles.push({ element: particle, opacity: 1, x: x, y: y }); if (particles.length > settings.trailLength) { const removed = particles.shift(); removed.element.remove(); } } function animate() { particles.forEach((particle, index) => { particle.opacity *= settings.fadeSpeed; particle.element.style.opacity = particle.opacity; if (particle.opacity < 0.01) { particle.element.remove(); particles.splice(index, 1); } }); requestAnimationFrame(animate); } animate(); function handleMouseMove(e) { if (trailEnabled) { createParticle(e.pageX - settings.particleSize / 2, e.pageY - settings.particleSize / 2); } } document.addEventListener('mousemove', handleMouseMove); document.getElementById('toggleTrail').addEventListener('click', function() { trailEnabled = !trailEnabled; this.textContent = trailEnabled ? 'Pause Trail' : 'Resume Trail'; this.style.background = trailEnabled ? '#5352ed' : '#2ed573'; }); document.getElementById('closeTrail').addEventListener('click', function() { document.removeEventListener('mousemove', handleMouseMove); particles.forEach(p => p.element.remove()); particles.length = 0; panel.remove(); window.mouseTrailActive = false; });})();
